<?xml version="1.0" encoding ="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_inherit_library">
            <field name="name">sale.order.form.inherit.library</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="reservation_id"/>
                </xpath>
                <field name="partner_id" position="before">
                    <field name="reservation_operator_id" attrs="{'invisible':[('reservation_id','=', False)]}"/>
                </field>
                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Members" attrs="{'invisible':[('reservation_id','=', FALSE)]}">
                        <field name="member_ids">
                            <tree>
                                <field name="name"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>