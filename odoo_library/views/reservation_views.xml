<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="reservation_view_form">
            <field name="name">library.reservation.form</field>
            <field name="model">library.reservation</field>
            <field name="arch" type="xml">
                <form string="Reservation Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="book_id"/> 
                                <field name="reservation_operator_id"/> 
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                            </group>
                            <notebook>
                                <page string="Members">
                                    <field name="member_ids"/>  
                                    <button name="confirm" string="Test Button" class="oe_highlight"/>
                                </page>   
                            </notebook>      
                        </group> 
                    </sheet>     
                </form>    
                
            </field>
        </record>
        
        
        
        <record model="ir.ui.view" id="reservation_view_list">
            <field name="name">library.reservation.list</field>
            <field name="model">library.reservation</field>
            <field name="arch" type="xml">
                <tree string="Reservation List">
                    <field name="name"/>
                    <field name="reservation_operator_id"/>
                </tree>
            </field>                    
        </record>
        
        
         <record model="ir.ui.view" id="reservation_view_calendar">
            <field name="name">library.reservation.calendar</field>
            <field name="model">library.reservation</field>
            <field name="arch" type="xml">
                <calendar string="Reservation Calendar"
                          date_start="start_date"
                          date_stop="end_date" 
                          mode="month"> 
                    <field name="name"/> 
                    <field name="reservation_operator_id"/>
                </calendar>
            </field>                    
        </record>
 
    </data>
</odoo>